#Payroll makefile

#Variables
COMPILE = g++
FLAGS = -W -Wall -Werror
OBJS = BBoard.o Message.o Reply.o Topic.o User.o

#Targets

all: main.cpp $(OBJS)
$(COMPILE) $(FLAGS) -o a.out main.cpp $(OBJS)

BBoard.o: BBoard.cpp BBoard.h BBoa
$(COMPILE) $(FLAGS) -c BBoard.cpp

Message.o: Message.cpp Message.h
$(COMPILE) $(FLAGS) -c Wizard.cpp

Elf.o: Elf.cpp Elf.h Character.h
$(COMPILE) $(FLAGS) -c Elf.cpp

Warrior.o: Warrior.cpp Warrior.h Character.h
$(COMPILE) $(FLAGS) -c Warrior.cpp

clean:
rm -rf *~ *.o a.out
